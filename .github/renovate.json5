{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": ["every sunday"],
  "labels": ["Dependencies"],
  "packageRules": [
    {
      // Compiler plugins are tightly coupled to Kotlin version
      "groupName": "Kotlin",
      "matchPackagePrefixes": [
        "androidx.compose.compiler",
        "org.jetbrains.kotlin",
      ],
    }
  ]
}